<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <size android:width="70dp" android:height="70dp"></size>
                    <stroke android:color="@color/colorPrimary" android:width="3dp"></stroke>
                    <padding android:right="10dp" android:left="10dp"></padding>
                    <corners android:radius="10dp"></corners>
                </shape>
            </item>
            <item android:bottom="-40dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:color="@color/colorAccent"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
    <item >
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <size android:width="70dp" android:height="70dp"></size>
                    <padding android:right="10dp" android:left="10dp"></padding>
                    <corners android:radius="10dp"></corners>
                </shape>
            </item>
            <item android:bottom="-40dp">
                <shape android:shape="line">
                    <stroke android:width="1dp"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>